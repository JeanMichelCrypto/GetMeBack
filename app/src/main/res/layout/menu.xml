<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background">


    <michelsmartproduction.getmeback.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/get_me_back"
        android:layout_marginTop="1dp"
        android:textSize="60dp"
        android:textColor="@color/white"
        android:layout_below="@+id/logo"
        android:id="@+id/titre"
        app:font="bernadette.ttf"
        android:layout_centerHorizontal="true" />

    <michelsmartproduction.getmeback.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="@string/enregistrer_ma_position"
        android:id="@+id/savePos"
        android:layout_below="@+id/titre"
        android:layout_marginTop="30dp"
        app:font="georgette.ttf"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/button_bg_transparent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"/>

    <michelsmartproduction.getmeback.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="@string/ramener"
        android:id="@+id/getBack"
        android:layout_marginTop="35dp"
        app:font="georgette.ttf"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/button_bg_transparent"
        android:layout_below="@+id/savePos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"/>

    <michelsmartproduction.getmeback.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="@string/liste_addresses"
        android:id="@+id/listButton"
        app:font="georgette.ttf"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/getBack"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/button_bg_transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true" />


</RelativeLayout>
