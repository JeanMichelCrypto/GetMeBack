<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choix">

    <michelsmartproduction.getmeback.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Comment y aller?"
        android:id="@+id/choixTitre"
        app:font="bernadette.ttf"
        android:textColor="@color/noir"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/choixTitre"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="250dp"
        android:background="#CCFFFFFF">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A pied"
        android:id="@+id/pied"
        android:layout_gravity="center"
        android:checked="true"
        android:buttonTint="@color/orange"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En vÃ©lo"
        android:id="@+id/velo"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:buttonTint="@color/orange"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En voiture"
        android:id="@+id/voiture"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:buttonTint="@color/orange"/>

    </RadioGroup>

    <Button
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:text="C'est parti!"
        android:id="@+id/lancerMaps"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:text="Retour"
        android:id="@+id/choixRetour"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>