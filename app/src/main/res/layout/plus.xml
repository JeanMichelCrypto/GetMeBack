<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="30sp"
        android:id="@+id/adresse"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y aller!"
        android:id="@+id/go"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/adresse"
        android:layout_toStartOf="@+id/adresse" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/retour2"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/supprimer"
        android:layout_marginBottom="121dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:id="@+id/supprimer"
        android:background="@color/red"
        android:layout_marginEnd="55dp"
        android:layout_alignBaseline="@+id/go"
        android:layout_alignBottom="@+id/go"
        android:layout_alignParentEnd="true" />

    <com.google.android.gms.maps.MapView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/map"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>